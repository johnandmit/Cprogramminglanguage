#include <stdio.h>

int main(){
    int n, a=1,b=1,c,e;
    printf("Enter n: ");
    scanf("%i", &n);
    for(;a<=n;a++){
      for(;b<=a;){
        printf("%i",b);
        b++;
      }
      printf("\n");
      b=1;
    }
    for(e=n,a=1,c=1;a<n;a++){
      e--;
    
    for(b=0,c=1;c<=e;c++){
      c++;
      printf("%i", b);
      if(c==e)
        printf("\n");
    }
    }
}
